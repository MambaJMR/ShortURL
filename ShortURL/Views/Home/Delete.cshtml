@using ShortURL.Models.DB;
@model Url

<form method="post">

    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Удалить Url</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4 p-2">
                        <label asp-for="LongUrl"></label>
                    </div>
                    <div class="col-8 p-2">
                        <input asp-for="LongUrl" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 p-2">
                        <label asp-for="ShortUrl"></label>
                    </div>
                    <div class="col-8 p-2">
                        <input asp-for="ShortUrl" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4 p-2">
                        <label asp-for="CreationDate"></label>
                    </div>
                    <div class="col-8 p-2">
                        <textarea asp-for="CreationDate" class="form-control summernote"></textarea>
                    </div>
                    <div class="form-group row">
                        <div class="col-4 p-2">
                            <label asp-for="TransitionСount"></label>
                        </div>
                        <div class="col-8 p-2">
                            <textarea asp-for="TransitionСount" class="form-control summernote"></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-4 p-2">
                            <label asp-for="Id"></label>
                        </div>
                        <div class="col-8 p-2">
                            <input asp-for="Id" disabled class="form-control" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-8 offset-4 row">
                            <div class="col">
                                <a asp-action="Index" class="btn btn-light w-100">Назад</a>
                            </div>
                            <div class="col">
                                <button type="submit" class="btn btn-danger w-100">Удалить</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>